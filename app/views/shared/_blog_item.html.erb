<div class="blog-item">
  <div class="heading">
    <h1> <%= blog_post.title %> </h1>
  </div>
  <div class="image">
    <%= image_tag blog_post.image %>
  </div>
  <div class="body">
    <p><%= blog_post.body %></p>
  </div>
  <div class="edit">
    <%= link_to 'Show', blog_post %>
    <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
    <%= link_to 'Destroy', blog_post, method: :delete, data: {confirm: 'Are you sure?'} %>
  </div>
</div>
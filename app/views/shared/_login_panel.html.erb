<!--Login buttons-->
<ul class="nav navbar-nav navbar-right login-panel">

  <% if user_signed_in? %>
      <div class='signed-in-user'>
        <li>
          <table>
            <tr>
              <td class="profile-name" data-name="<%= current_user.full_name %>">
                <% unless current_user.provider == 'email' %>
                    <%= current_user.full_name %>
                <% else %>
                    <%= link_to current_user.full_name, edit_user_registration_path, id: 'edit_user' %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to(t('devise.views.sign_out'), destroy_user_session_path, :method => :delete) %>
              </td>
            </tr>
          </table>
        </li>
        <li><%= image_tag current_user.image, class: 'profile-image' %></li>
      </div>
  <% else %>
      <li class='navbar-icon' title="<%= t('navbar.tooltip.email') %>">
        <%= link_to image_tag("email_icon.png", alt: "email"), new_user_session_path, {rel: 'nofollow', id: 'email_login', class:'sign-in-button'} %>
      </li>

      <li class='navbar-icon' title="<%= t('navbar.tooltip.facebook') %>">
        <%= link_to image_tag("facebook_icon.png", alt: "facebook"), user_omniauth_authorize_path(:facebook), rel: 'nofollow' %>
      </li>
      <li class='navbar-icon' title="<%= t('navbar.tooltip.vkontakte') %>">
        <%= link_to image_tag("vk_icon.png", alt: "vkontakte"), user_omniauth_authorize_path(:vkontakte), rel: 'nofollow' %>
      </li>


      <li class='navbar-icon' title="<%= t('navbar.tooltip.twitter') %>">
        <%= link_to image_tag("twitter_icon.png", alt: "twitter"), user_omniauth_authorize_path(:twitter), rel: 'nofollow'  %>
      </li>
      <li class='navbar-icon' title="<%= t('navbar.tooltip.rss') %>">
        <%= link_to image_tag("rss_icon.png", alt: "rss"), blog_posts_path(I18n.locale, :rss), rel: 'nofollow' %>
      </li>
  <% end %>
</ul>

<% content_for :modal_header do %>
    <%= t('devise.views.login') %>
<% end %>

<% content_for :modal_ceiling do %>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary image-gallery-ok-button">Ok</button>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label t('devise.views.email') %><br/>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label t('devise.views.password') %><br/>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label t('devise.views.remember_me') %>
        </div>
    <% end -%>
<% end %>

<%= render "devise/shared/links" %>

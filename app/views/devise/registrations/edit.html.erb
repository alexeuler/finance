<% content_for :modal_header do %>
    <%= t('devise.views.sign_up') %>
<% end %>

<% content_for :modal_ceiling do %>
    <button type="button" class="btn btn-default cancel-button" id="cancel_button" data-dismiss="modal"><%= t('general.cancel') %></button>
    <button type="button" class="btn btn-primary ok-button" id="ok_button"><%= t('general.ok') %></button>
<% end %>


<%= form_for(resource, remote: true, as: resource_name, format: :json,
             url: registration_path(resource_name), html: {method: :put, :'data-type' => 'json'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label t('devise.views.email') %><br/>
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label t('devise.views.first_name') %><br/>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label t('devise.views.last_name') %><br/>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>


    <div class="field ceiling">
      <%= f.submit t('general.ok'), class: 'btn btn-primary' %>
      <button type="button" class="btn btn-default cancel-button" id="cancel_button" data-dismiss="modal"><%= t('general.cancel') %></button>
    </div>


<% end %>



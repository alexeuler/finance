<div class="image-gallery">
  <table>
    <tbody>
    <tr>
      <td class="images-container">
        <div>
          <% @images.each do |image| %>
              <div class="image-container" data-id="<%= image.id %>">
                <%= image_tag image.file.url(:small) %>
              </div>
          <% end %>
        </div>
      </td>
      <td class='side-panel'>
        <div>
          <%= form_for(@image, remote:true, html:{:'data-type' => :html}) do |f| %>
              <div class="field">
                <%= f.label :tags %><br>
                <%= f.text_field :tags %>
              </div>
              <br/>

              <div class="field">
                <%= f.label :file %><br>
                <%= f.file_field :file %>
              </div>
              <br/>

                <%= f.submit class: 'btn btn-default', value: 'Add' %>
              <br/>
          <% end %>
          <%= button_to 'Delete', @image, :method => :delete,
                        remote: true, class: 'btn btn-default', form:{id:'delete_image'} %>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
</div>
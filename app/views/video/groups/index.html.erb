<%= link_to 'New Group', new_video_group_path %>
<% @video_groups.each do |video_group| %>
    <div class="group-item">
      <div class="body">
        <table>
          <tr>
            <td>
              <%= link_to image_tag(video_group.image), video_posts_path(group: video_group.id) if video_group.image %>
            </td>
            <td>
              <h3><%= link_to video_group.title, video_posts_path(group: video_group.id) %></h3>
              <%= video_group.description %>
            </td>
          </tr>
        </table>
        <%= link_to 'Edit', edit_video_group_path(video_group) %>
        <%= link_to 'Destroy', video_group, method: :delete, data: {confirm: 'Are you sure?'} %>
      </div>
    </div>
<% end %>

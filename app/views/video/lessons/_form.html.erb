<div class="form-body">
  <%= form_for(@video_lesson) do |f| %>
      <% if @video_lesson.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@video_lesson.errors.count, "error") %> prohibited this video_lesson from being
              saved:</h2>

            <ul>
              <% @video_lesson.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <table class="form-table">
        <tr>
          <td class="left-controls">
            <div class="field">
              <%= f.label :title %><br>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
            <br/>

            <div class="field">
              <%= f.label :description %><br>
              <%= f.text_area :description, class: 'form-control', rows: 5 %>
            </div>
            <br/>

            <div class="field">
              <%= f.label :image %><br>
              <%= f.text_field :image, class: 'form-control' %>
            </div>
            <br/>

            <div class="field">
              <!-- Button trigger modal -->
              <button type="button" class="btn btn-primary modal-launch-button">
                <%= t('general.add_image') %>
              </button>
            </div>
            <br/>

          </td>
          <td class="right-controls">

            <div class="field">
              <%= f.label :language %><br>
              <%= f.text_field :language, class: 'form-control' %>
            </div>
            <br/>


            <div class="field">
              <%= f.label :tags %><br>
              <%= f.text_field :tags, class: 'form-control' %>
            </div>
            <br/>

            <div class="field">
              <%= f.label :order %><br>
              <%= f.number_field :order, class: 'form-control' %>
            </div>
            <br/>
          </td>
        </tr>
      </table>
      <div class="actions">
        <%= f.submit %>
      </div>
      <br/>

  <% end %>

</div>
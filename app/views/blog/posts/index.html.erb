  <div class="row">

    <div class="posts-container-layout col-sm-9 col-lg-9 col-md-9">
      <div class="posts-container">
        <% @blog_posts.each do |blog_post| %>
            <%= render partial: 'blog_item', locals: {blog_post: blog_post} %>
        <% end %>
      </div>
    </div>

    <div class="posts-panel-layout col-sm-3 col-lg-3 col-md-3">
      <div class="posts-panel">
        <%= link_to t("general.new"), new_blog_post_path %>
        <%= render partial: 'blog_panel', locals: {blog_tags: @blog_tags} %>
      </div>
    </div>

  </div>
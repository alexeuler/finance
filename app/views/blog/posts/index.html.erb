<h1>Listing blog_posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th>Status</th>
      <th>Image</th>
      <th>Category</th>
      <th>Excerpt</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_posts.each do |blog_post| %>
      <tr>
        <td><%= blog_post.title %></td>
        <td><%= blog_post.body %></td>
        <td><%= blog_post.tags %></td>
        <td><%= blog_post.status %></td>
        <td><%= blog_post.image %></td>
        <td><%= blog_post.category %></td>
        <td><%= blog_post.excerpt %></td>
        <td><%= blog_post.slug %></td>
        <td><%= link_to 'Show', blog_post %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(blog_post) %></td>
        <td><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_blog_post_path %>

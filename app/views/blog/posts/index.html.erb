<table class="blog-container-layout">
  <tr>
    <td class="posts-container-layout">
      <div class="posts-container">
        <% @blog_posts.each do |blog_post| %>
            <%= render partial: 'blog_item', locals: {blog_post: blog_post} %>
        <% end %>
      </div>
    </td>
    <td class="posts-panel-layout">
      <div class="posts-panel">
        <%= render partial: 'blog_panel', locals: {blog_tags: @blog_tags} %>
      </div>
    </td>
  </tr>
</table>